{
  "name": "medusa-root",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "start": "turbo start",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "generate-env": "cp ./apps/medusa/.env.template ./apps/medusa/.env && cp ./apps/storefront/.env.template ./apps/storefront/.env",
    "medusa:init": "turbo run medusa:init --filter=medusa",
    "format": "turbo run format",
    "clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}'",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "prettier": "^3.2.5",
    "turbo": "^2.1.2",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=20"
  },
  "resolutions": {
    "@medusajs/js-sdk": "2.7.0",
    "@medusajs/types": "2.7.0",
    "@medusajs/icons": "2.8.4",
    "@medusajs/ui": "4.0.14",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-hook-form": "7.0.1"
  },
  "packageManager": "yarn@4.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@hookform/resolvers": "^5.1.0",
    "@medusajs/icons": "^2.8.4",
    "@medusajs/ui": "^4.0.14",
    "@tanstack/react-query": "^5.80.6",
    "radix-ui": "^1.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.57.0",
    "react-router": "^7.5.3",
    "remix-hook-form": "^7.0.1",
    "zod": "^3.25.56"
  }
}
